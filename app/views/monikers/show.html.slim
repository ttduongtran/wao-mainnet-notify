- if notice.present?
  .alert.alert-info
    p#notice= notice

h1 Monikers
= link_to 'New Moniker', new_moniker_path, class: 'btn btn-primary'
.py-4
  .card.p-2
    p#notice= notice
    p
      strong Name:
      span.px-2= @moniker.name
    p
      strong Type:
      span.px-2= @moniker.moniker_type
    p
      strong Status:
      span.px-2= @moniker.status
    p
      strong Memo:
      span.px-2= @moniker.memo
    hr
    .d-flex
      = link_to 'Edit', edit_moniker_path(@moniker), class: 'btn btn-info mr-2'
      = link_to 'Back', monikers_path, class: 'btn btn-dark mr-2'
